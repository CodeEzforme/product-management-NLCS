extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    if(role.permissions.includes("products-category_view"))
        +alert-success(5000)
        +alert-error(5000)

        if (data.title)
            h1(class="mb-4") Danh mục: #{data.title}
        hr

        if (data.thumbnail)
            div(class="mb-4")
                img(
                    src=data.thumbnail
                    style="width: 100px"
                )

        if (data.status)
            div(class="mb-4")
                span Trạng thái:
                if (data.status === "active")
                    span(class="badge badge-success") Hoạt động
                else
                    span(class="badge badge-danger") Dừng hoạt động

        if (data.position)
            div(class="mb-4") Vị trí: <b>#{data.position}</b>

        if (data.description)
            div(class="mb-4") !{data.description}
