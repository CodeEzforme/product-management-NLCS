
mixin pagination(pagination)
    nav
        ul(class="pagination" )
            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination=1
                    ) Trang đầu

                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination=pagination.currentPage-1
                    ) Trang trước

            if(pagination.currentPage > 2)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination= pagination.currentPage - 2
                    ) ...

            - for (var i = pagination.currentPage - 1; i <= pagination.currentPage + 1; i++)
                if(i >= 1 && i <= pagination.totalPage )
                    li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                        button(
                            class="page-link"
                            button-pagination=i
                        ) #{i}

            //- - for (var i = 1; i <= pagination.totalPage; i++)
            //-     if((i <= pagination.currentPage + 1 && i >= pagination.currentPage - 1) || (pagination.currentPage == 1 && i <= 3) || (pagination.currentPage == pagination.totalPage && i >= pagination.totalPage - 2) )
            //-         li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
            //-             button(
            //-                 class="page-link"
            //-                 button-pagination=i
            //-             ) #{i}

            if(pagination.currentPage <  pagination.totalPage - 1)
                li(class="page-item")
                button(
                    class="page-link"
                    button-pagination= pagination.currentPage + 2
                ) ...

            if(pagination.currentPage < pagination.totalPage)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination=pagination.currentPage+1
                    ) Kế tiếp

                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination=pagination.totalPage
                    ) Trang cuối